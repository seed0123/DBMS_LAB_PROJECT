* {
	margin: 0;
	padding: 0;
	font-family: times new roman;
	box-sizing:border-box
}
body{
	background:url(img20.jpg) no-repeat;
	background-size:cover;
	color:#000;
}
.container{
	width:50%;
	min-height:70vh;
	padding:0;
	display: flex;
	align-items:center;
	justify-content: center;
	
}
.search-bar{
	width :100%;
	max-width:400px;
	background:rgba(255,255,255,0.2);
	display:flex;
	align-items:center;
	border-radius:50px;
	padding:10px 20px;
	backdrop-filter:blur(4px) saturate(180%);
}
.search-bar input{
	background:transparent;
	flex:1;
	border:0;
	outline:none;
	padding: 24px 20px;
	font-size:100px;
	color:#cac7ff;
}
.search-bar     input{
	font-size:16px;
	padding: 15px 10px;
	width: 100%;
	border: 0;
	border-radius: 5px;
	outline: none;
}
::placeholder{
	color:#cac7ff
}

.search-bar button img{
	width: 25px;
}
.search-bar {
	border: 0;
	border-radius: 50%;
	width: 60px;
	height: 60px;
	background:#58629b;
	cursor:pointer;
}
	
	
