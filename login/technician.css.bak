* {
	padding: 0;
	margin: 0;
	font-family: times new roman;
}
body{
	background:url(img.jpg) no-repeat;
	background-size:cover;
	color:#000;
}
.technician-details{
	position: absolute;
	top: 50%;
	left: 50%;
	transform : translate(-50%, -50%);
	width: 350px;
}
.technician-details h1{
	font-size: 40px;
	text-align: center;
	text-transform: uppercase;
	margin: 40px 0;
	color: #000;
}
.technician-details P{
	font-size: 16px;
	margin: 10px 0;
}
.technician-details input{
	font-size:12px;
	padding: 10px 10px;
	width: 100%;
	border: 0;
	border-radius: 5px;
	outline: none;
}
.technician-details button{
	font-size: 18px;
	font-weight: bold;
	margin:20px 0;
	padding:10px 15px;
	width: 50%;
	border: 0;
	border-radius: 5px;
	background-color:#fff;
}
.technician-details button:hover{
}
	
	
